<odoo>
    <data noupdate="1">

        <record id="ir_rule_ks_dashboard_item_company_restrictions" model="ir.rule">
            <field name="name">عنصر لوحة المعلومات قيود الشركة: يمكن للمستخدم عرض عناصر الشركة والشركات الفرعية فقط.
            </field>
            <field name="model_id" ref="model_ks_dashboard_mtn_item"/>
            <field name="domain_force">
                ['|',('ks_company_id','in', company_ids),('ks_company_id','=',False)]</field>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
        </record>

        <record model="ir.module.category" id="ks_dashboard_mtn_security_groups">
            <field name="name"> حقوق متن للوحة المعلومات </field>
        </record>

        <record model="res.groups" id="ks_dashboard_mtn_group_manager">
            <field name="name">إظهار ميزات لوحة المعلومات الكاملة</field>
            <field name="category_id" ref="ks_dashboard_mtn.ks_dashboard_mtn_security_groups"/>
        </record>

        <record id="base.group_system" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('ks_dashboard_mtn.ks_dashboard_mtn_group_manager'))]"/>
        </record>
        
        <!-- board -->

     <record model="ir.rule" id="ks_dashboard_mtn_item_rule">
        <field name="name">قواعد اللوحة : مشاهدة الجميع</field>
        <field name="model_id" ref="model_ks_dashboard_mtn_item"/>
        <field name="domain_force">['|',('group_ids', 'in', user.groups_id.ids),('group_ids', '=', False)]</field>
    </record>

    </data>
</odoo>